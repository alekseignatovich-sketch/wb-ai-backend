{
  "manifest_version": 3,
  "name": "WB AI Analyst",
  "version": "1.0",
  "description": "Анализ товаров на Wildberries с ИИ",
  "permissions": ["activeTab"],
  "host_permissions": ["https://www.wildberries.ru/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "matches": ["https://www.wildberries.ru/catalog/*/detail.aspx*"],
    "js": ["content.js"]
  }]
}
